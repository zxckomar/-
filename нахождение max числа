from random import randint
A = [randint(100, 120) for i in range(3)]
print("Массив A:")
print(*A)
def zxc(x):
    summ = 0
    while x > 0:
        summ += x % 10
        x //= 10
    return(summ)
for i in range(len(A)):
    swapped = False
    for j in range(0, len(A)-i-1):
        if zxc(A[j]) < zxc(A[j+1]):
            A[j], A[j + 1] = A[j + 1], A[j]
            swapped = True
    if not swapped:
        break
print("После сортировки:")
print(*A)
.
from random import randint
A = [randint(0,7) for i in range(6)]
print("Массив:")
print(*A)
n = len(A)
for i in range(n):
    swapped = False
    for j in range(0, n - i - 1):
        if A[j] > A[j + 1]:
            A[j], A[j + 1] = A[j + 1], A[j]
            swapped = True
        else:
            break
    if not swapped:
        break
print(*A)
